@page
@using Microsoft.AspNetCore.Mvc.Localization
@model LoginModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Log in";
}

<h1>@Localizer["LoginTitle"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.UserNameEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.UserNameEmail" class="form-label">@Localizer["UserName"]</label>
                    <span asp-validation-for="Input.UserNameEmail" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">@Localizer["Password"]</label>
                    <ul id="password-rules">
                        <li id="rule-length">At least 6 characters</li>
                        <li id="rule-uppercase">At least one uppercase letter</li>
                        <li id="rule-lowercase">At least one lowercase letter</li>
                        <li id="rule-number">At least one number</li>
                        <li id="rule-special">At least one special character</li>
                    </ul>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["LoginButton"]</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
